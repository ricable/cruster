  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "public/icon.icns",
        "osxSign": {
          "identity": "Developer ID Application: Zane Hitchcox (9C3K4KBV67)",
          "hardened-runtime": true,
          "entitlements": "public/entitlements.plist",
          "signature-flags": "library"
        },
        "osxNotarize": {
          "appleId": "zwhitchcox@me.com",
          "appleIdPassword": "nwpm-mqos-xbho-tzjj"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
