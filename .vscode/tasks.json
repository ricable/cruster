{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start-react",
			"path": "desktop/",
			"problemMatcher": [],
			"label": "Start React",
			"detail": "export BROWSER=none && react-scripts start",
			"presentation": {
				"reveal": "never",
				"panel": "dedicated"
			}
		},
		{
			"label": "Start Electron",
			"type": "shell",
			"command": "npm run start-electron",
			"options": {
				"cwd": "${workspaceRoot}/desktop"
			},
			"detail": "export ELECTRON_START_URL=http://localhost:3000 && electron .",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			},
			"problemMatcher": []
		},
		{
			"label": "electron/react",
			"dependsOn": [
				"Start React",
				"Start Electron"
			],
			"problemMatcher": []
		}
	]
}